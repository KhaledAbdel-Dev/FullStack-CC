<!doctype html>
<html>
<head>
    <title>Cancel Culture - Home</title>
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.0.2/css/bootstrap.min.css">
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css">
    <link rel="stylesheet" href="style.css">
    <link rel="preconnect" href="https://fonts.googleapis.com">
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
<link href="https://fonts.googleapis.com/css2?family=Roboto&display=swap" rel="stylesheet">
</head>
<body>
<div class="container">

    <div class="page-header text-center">
        <h1>Cancel Culture.</h1>
        <h3>An argumentative social discussion platform</h3>
        <a href="/logout" class="btn btn-default btn-sm">Logout</a>
    </div>

    
        
       
            <h2 id="prompt"></h2>
          
    <ul class="display">
        <h4>Discussion Board</h4>
        <% for(var i = 0; i < times.length; i++) {%>
            <li class="">
                <span><%= times[i].shift %></span>:
                <span><%= times[i].name %></span>:
                <span><%= times[i].msg %></span>
                <span><%= times[i].thumbUp %></span>
                <span><i class="fa fa-thumbs-up" aria-hidden="true"></i></span>
                <span><i class="fa fa-thumbs-down" aria-hidden="true"></i></span>
            </li>
        <% } %>
    </ul>        
        <% if (user.local.email) { %>
          <form action="/times" method="POST">
            <select name="shift" id="clock">
                <option value="">Pick Your Position</option>
                <option value="FOR">FOR</option>
                <option value="AGAINST">AGAINST</option>
            </select>
            <input type="text" value="<%= user.local.email %>" name="name">
            <input type="text" placeholder="Talk yo shit" name="msg">
            <button id="submit-button" type="submit">Submit</button>
        </form>
    
        <% } %>

</div>
<div class="bottom">
    <button id="delete-button">Clear Board</button>
  <div class="q">
    <h2>Get Started Here </h2>
    <form>
        <select name="difficulty" id="diff">
            <option value="0">Pick Your Level of Controversy</option>
            <option value="0">Good Banter</option>
            <option value="5">Risk the Friendship</option>
        </select>
        <select name="topic" id="topic">
            <option value="0">Pick A Topic</option>
            <option value="1">Personal</option>
            <option value="2">Social</option>
            <option value="3">Political</option>
            <option value="4">Trending Topic</option>
        </select>
    </form>
    <button id="getQ">Get Your Question</button>
</div>

<script src="main.js"></script>

</body>
</html>
